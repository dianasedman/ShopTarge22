@model IEnumerable<ShopTARge22.Models.Kindergartens.KindergartenIndexViewModel>;

@{
    int rowNumber = 1;
}


<header class="major">
    <h2>Kindergarten</h2>

</header>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">KindergartenName</th>
                <th scope="col">Teacher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.Teacher</td>
                    <td>
                        <a asp-action="details" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-outline-success">Details</a>
                        <a asp-action="update" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-outline-secondary">Update</a>
                        <a asp-action="delete" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-outline-warning">Delete</a>

                    </td>
                </tr>

                rowNumber += 1;
            }
        </tbody>
    </table>
</form>

<div>
    <a asp-action="create" asp-controller="Kindergartens" type="submit" class="button primary">Create</a>
</div>