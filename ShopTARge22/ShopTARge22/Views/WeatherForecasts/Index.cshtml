@model ShopTARge22.Models.Forecast.SearchCityViewModel

<header class="major">
    <h2>Weather Forecast</h2>
</header>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <p>

        </p>
        <div>
            <div class="container">
                <div class="form-group col-md-offset-3 col-md-5">
                    <button asp-controller="WeatherForecasts" asp-action="searchCity" class="button">Search</button>
                </div>
            </div>
        </div>
    </form>
</div>