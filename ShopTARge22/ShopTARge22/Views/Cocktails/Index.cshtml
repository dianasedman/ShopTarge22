@model ShopTARge22.Models.Cocktails.SearchCocktailViewModel;

<header class="major">
    <h2>Search Cocktail</h2>
</header>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Find your favourite cocktail by searching!</h2>
                <label asp-for="SearchCocktail"></label>
                <input asp-for="SearchCocktail" class="form-control" />
                <span asp-validation-for="SearchCocktail" class="text-danger"></span>
            </div>
        </div>
        <p>

        </p>
        <div>
            <div class="container">
                <div class="form-group col-md-offset-3 col-md-5">
                    <button asp-controller="cocktails" asp-action="SearchCocktails" class="button">Search</button>
                </div>
            </div>
        </div>
    </form>
</div>