@model IEnumerable<ShopTARge22.Models.Spaceships.SpaceshipsIndexViewModel>

@{
    int rowNumber = 1;
}
<section class="main">


    <header class="major">
        <h2>Spaceships</h2>

    </header>
</section>
<form method="post" class="form">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Built date</th>
                <th scope="col">Passengers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceships in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.Type</td>
                    <td>@spaceships.BuiltDate</td>
                    <td>@spaceships.Passengers</td>
                    <td>
                            <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-info" >Details</a>
                            <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-secondary" >Update</a>
                            <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger" >Delete</a>

                    </td>
                </tr>

                rowNumber += 1;
            }
        </tbody>
    </table>
</form>
    <div>
        <a asp-action="create" asp-controller="Spaceships" type="submit" class="button primary">Create</a>
    </div>

</section>