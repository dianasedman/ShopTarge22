@model ShopTARge22.Models.AccuWeather.AccuSearchCityViewModel

<header class="major">
    <h2>AccuWeather</h2>
</header>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the city</h2>
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <p>

        </p>
        <div>
            <div class="container">
                <div class="form-group col-md-offset-3 col-md-5">
                    <button asp-controller="AccuWeathers" asp-action="searchCity" class="button">Search</button>
                </div>
            </div>
        </div>
    </form>
</div>